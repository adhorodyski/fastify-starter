{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "incremental": true,
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "src/*": ["./*"],
            "config/*": ["config/*"],
            "example/*": ["example/*"],
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.ts"]
}
